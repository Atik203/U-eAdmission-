<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ueadmission.admission.AdmissionController">
    <MFXScrollPane fitToWidth="true" fitToHeight="true" prefViewportWidth="1280" prefViewportHeight="720">
    <VBox spacing="0" stylesheets="@admission.css">
        <!-- ðŸ”· Navbar -->
        <HBox id="navbar" alignment="CENTER_LEFT" spacing="30" style="-fx-background-color: #FA4506;">
            <padding>
                <Insets topRightBottomLeft="15" />
            </padding>
            <ImageView fitHeight="40" fitWidth="40">
