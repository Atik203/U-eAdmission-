                            </HBox>
                        </VBox>
                        
                        <!-- Academic Information Section -->
                        <VBox styleClass="form-section" alignment="CENTER">
                            <Label text="Academic Information" styleClass="section-header"/>
                            
                            <HBox alignment="CENTER">
                                <VBox HBox.hgrow="ALWAYS">
